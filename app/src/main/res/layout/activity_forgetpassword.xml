<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".forgetpassword"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@color/colorPrimary"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorAccent" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_above="@+id/loginLayout"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/textViewFormName"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_margin="55dp"
        android:paddingTop="10dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Password Update"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="25dp" />

</LinearLayout>
<LinearLayout
    android:layout_width="300dp"
    android:layout_height="350dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/shadow"
    android:orientation="vertical"
    android:id="@+id/loginLayout"
    android:padding="30dp">

    <EditText
        android:id="@+id/updateFirstName"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="First Name"
        android:inputType="text"
        android:textColorHint="@android:color/white"/>
    <EditText
        android:id="@+id/updateLastName"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Last Name"
        android:inputType="text"
        android:textColorHint="@android:color/white" />
    <EditText
        android:id="@+id/updateTextPhone"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Mobile no."
        android:inputType="number"
        android:textColorHint="@android:color/white" />
    <EditText
        android:id="@+id/updateaddr"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Address"
        android:inputType="text"
        android:textColorHint="@android:color/white" />
    <EditText
        android:id="@+id/updateName"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="User Name"
        android:inputType="text"
        android:textColorHint="@android:color/white"/>
    <EditText
        android:id="@+id/updatepass"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Password"
        android:inputType="text"
        android:textColorHint="@android:color/white"/>



</LinearLayout>
<LinearLayout
    android:layout_width="200dp"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:layout_marginTop="0dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/loginLayout">
    <Button
        android:id="@+id/updateRegisterButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Update"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"
        android:background="@drawable/loginbutt"
        android:layout_weight="1"/>

</LinearLayout>
</RelativeLayout>